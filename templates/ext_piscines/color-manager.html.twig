{% extends 'admin.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <section class="block">
        <h2>{{ title }}</h2>
        <article>
            <h3>Formulaire d'ajout</h3>
            {{ form(form) }}
        </article>
    </section>
    <hr>
    <section class="block">
        <h2>Liste des coloris</h2>
        <p>
            Cliquez sur une couleur pour la supprimer. Attention cette action est irréversible.
        </p>
        <div class="grid">
        {% for color in colors %}
            <article class="block-item">
                <a onclick="return confirm('Souhaitez-vous réellement supprimer cette couleur ?')" href="{{ path('app_color_delete', {id: color.id}) }}">
                    <img src="{{color_img_dir}}/{{ color.color }}" alt="{{ color.title }}" class="item-image">
                    <p class="item-title">
                        {{ color.title }}
                    </p>
                </a>
            </article>
        {% endfor %}
        </div>
    </section>
{% endblock %}